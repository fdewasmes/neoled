{
  "matrix": {
    "rows": 32,
    "parallel": 3,
    "chain": 4,
    "pwmbits": 11,
    "brightness": 50
  },
  "layouts": [
    "sample-config/layout1.json",
    "sample-config/layout40.json"

  ],
  "defaultLayout": 0,
  "providers": [

    {
      "type": "providers.DatetimeProvider.DatetimeProvider",
      "refreshInterval": 1,
      "emit": "time.event"
    },

    {
      "type": "providers.ShellProvider.ShellProvider",
      "refreshInterval": 10,
      "emit": "fortune.event"
    },
    {
      "type": "providers.RandomProvider.RandomProvider",
      "refreshInterval": 0.2,
      "lowerBound": 0,
      "upperBound": 100,
      "emit": "dummy.event"
    },
    {
      "type": "providers.RollingCounterProvider.RollingCounterProvider",
      "refreshInterval": 5,
      "lowerBound": 0,
      "upperBound": 1,
      "emit": "layout.event"
    }
  ],
  "adapters": [
    {
      "type": "adapters.jenkins.JenkinsAdapter",
      "listen": "web.jenkins",
      "emit": "jenkins.event"
    },
    {
      "type": "adapters.hue.HueAdapter",
      "listen": "web.hue",
      "emit": "hue.command"
    },
    {
      "type": "adapters.bidibulle.BidibulleAdapter",
      "listen": "web.bidibulle",
      "emit": "bidi.event"
    },
    {
      "type": "adapters.layout.LayoutAdapter",
      "listen": "web.layout",
      "emit": "layout.event"
    }
  ]
}
