{
  "matrix": {
    "rows": 32,
    "parallel": 1,
    "chain": 4,
    "pwmbits": 11,
    "brightness": 50
  },
  "layouts": [
    "layout1.json",
    "layout2.json",
    "layout3.json"
  ],
  "defaultLayout": 0,
  "providers": [
    {
      "type": "providers.CpuProvider.CpuProvider",
      "refreshInterval": 1,
      "emit": "cpu.event"
    },
    {
      "type": "providers.ShellProvider.ShellProvider",
      "refreshInterval": 10,
      "emit": "fortune.event"
    },
    {
      "type": "providers.RandomProvider.RandomProvider",
      "refreshInterval": 0.2,
      "lowerBound": 0,
      "upperBound": 10,
      "emit": "dummy.event"
    }

  ],
  "adapters": [
    {
      "type": "adapters.jenkins.JenkinsAdapter",
      "listen": "web.jenkins",
      "emit": "jenkins.event"
    },
    {
      "type": "adapters.hue.HueAdapter",
      "listen": "web.hue",
      "emit": "hue.command"
    },
    {
      "type": "adapters.bidibulle.BidibulleAdapter",
      "listen": "web.bidibulle",
      "emit": "bidi.event"
    },
    {
      "type": "adapters.layout.LayoutAdapter",
      "listen": "web.layout",
      "emit": "layout.event"
    },
    {
      "type": "adapters.hockeyapp.HockeyAppAdapter",
      "listen": "web.hockey",
      "emit": "hockey.event"
    }
  ],
  "commands": [
    {
      "type": "commands.hue.HueCommand",
      "bridgeIp": "192.168.136.56",
      "config_file_path": "./confighue",
      "listen": "hue.command",
      "lightbulbs": [
        "Porte",
        "Plafond 1"
      ]
    }
  ]
}
